{
  "name": "@fishivo/native",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "yarn watchman:clean && react-native start --port 8081",
    "start": "yarn watchman:clean && react-native start --port 8081",
    "metro": "yarn watchman:clean && react-native start --port 8081",
    "build": "echo 'Mobile app build completed - no bundling needed for development'",
    "android": "yarn watchman:clean && osascript -e 'tell app \"Terminal\" to do script \"cd $(pwd) && react-native start --reset-cache\"' && sleep 3 && react-native run-android",
    "android:dev": "yarn android",
    "android:release": "yarn android:clean && yarn bundle:release && cd android && ./gradlew assembleRelease && adb install -r app/build/outputs/apk/release/app-release.apk && adb shell am start -n com.fishivo/.MainActivity && echo '✅ Release APK build edildi, yüklendi ve başlatıldı!'",
    "android:bundle": "yarn android:clean && yarn bundle:release && cd android && ./gradlew bundleRelease && echo '✅ AAB hazır (Google Play Store): android/app/build/outputs/bundle/release/app-release.aab'",
    "android:clean": "cd android && ./gradlew clean && rm -rf app/build && rm -rf app/src/main/assets/index.android.bundle",
    "android:install:debug": "cd android && adb install -r app/build/outputs/apk/debug/app-debug.apk",
    "android:install:release": "cd android && adb install -r app/build/outputs/apk/release/app-release.apk",
    "bundle:release": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res --minify true --reset-cache",
    "bundle:debug": "react-native bundle --platform android --dev true --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "apk": "yarn android:clean && yarn bundle:debug && cd android && ./gradlew assembleDebug && adb install -r app/build/outputs/apk/debug/app-debug.apk && adb shell am start -n com.fishivo/.MainActivity && echo '✅ Standalone Debug APK yüklendi ve başlatıldı!'",
    "aab": "yarn android:bundle",
    "apk:debug": "cd android && ./gradlew assembleDebug",
    "android:start": "adb shell am start -n com.fishivo/.MainActivity",
    "ios": "yarn watchman:clean && osascript -e 'tell app \"Terminal\" to do script \"cd $(pwd) && react-native start --reset-cache\"' && sleep 3 && react-native run-ios --simulator='iPhone 16 Pro'",
    "clean": "rm -rf node_modules && cd android && ./gradlew clean && cd ../../.. && yarn install",
    "reset": "yarn dlx react-native-clean-project && yarn watchman:reset",
    "pods": "cd ios && pod install && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace Fishivo.xcworkspace -scheme Fishivo -configuration Release -destination generic/platform=iOS -archivePath Fishivo.xcarchive archive",
    "lint": "eslint .",
    "test": "jest",
    "postinstall": "patch-package && node -e \"if (process.platform === 'darwin') { require('child_process').execSync('cd ios && pod install', {stdio: 'inherit'}); }\"",
    "watchman:clean": "watchman watch-del '../../..' ; watchman watch-project '../../..' || true",
    "watchman:reset": "watchman shutdown-server && yarn watchman:clean",
    "watchman:status": "watchman version && watchman watch-list"
  },
