{
  "extends": "../../node_modules/@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2017"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@fishivo/api": ["../../packages/api/dist/index"],
      "@fishivo/api/*": ["../../packages/api/dist/*"],
      "@fishivo/types": ["../../packages/types/dist/index"],
      "@fishivo/types/*": ["../../packages/types/dist/*"],
      "@fishivo/hooks": ["../../packages/hooks/dist/index"],
      "@fishivo/ui": ["../../packages/ui/dist/index"],
      "@fishivo/utils": ["../../packages/utils/src/index"],
      "@fishivo/utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "index.js",
    "metro.config.js",
    "babel.config.js",
    "react-native.config.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "android",
    "ios"
  ],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/hooks" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/api" }
  ]
}
