{
  "extends": ["//"],
  "tasks": {
    "android:build": {
      "outputs": [
        "android/app/build/outputs/apk/debug/**",
        "android/app/build/outputs/apk/release/**",
        "android/app/build/outputs/bundle/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "android/**/*.gradle",
        "android/**/*.properties",
        "android/**/AndroidManifest.xml"
      ],
      "env": [
        "ANDROID_HOME", 
        "JAVA_HOME", 
        "GOOGLE_CLIENT_ID",
        "GOOGLE_IOS_CLIENT_ID",
        "GOOGLE_WEB_CLIENT_ID",
        "FACEBOOK_APP_ID",
        "FACEBOOK_APP_SECRET",
        "GOOGLE_CLIENT_SECRET"
      ]
    },
    "ios:build": {
      "outputs": [
        "ios/build/**",
        "ios/*.xcarchive"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "ios/**/*.xcworkspace",
        "ios/**/*.plist"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": [
        "REACT_NATIVE_NODE_MODULES_DIR",
        "METRO_PORT",
        "API_URL",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY"
      ]
    }
  }
}